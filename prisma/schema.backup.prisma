generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id        String   @id @default(cuid())
  displayId String?  @unique // Readable ID e.g. DRP-1023
  email     String   @unique
  name      String?
  password  String? // Optional for Google Login users
  role      String   @default("customer") // "admin" or "customer"
  image     String?
  accounts  Account[]
  orders    Order[]
  createdAt DateTime @default(now())
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String
  price       Decimal     @db.Decimal(10, 2)
  sale_price  Decimal?    @db.Decimal(10, 2)
  sale_percent Int?
  image       String?
  stock       Int         @default(0)
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Order {
  id            String      @id @default(cuid())
  userId        String?
  user          User?       @relation(fields: [userId], references: [id])
  customerEmail String?     // For guest checkout
  status        String      @default("PENDING") // PENDING, PAID, SHIPPED, COMPLETED
  total         Decimal     @db.Decimal(10, 2)
  paypalOrderId String?
  items         OrderItem[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
}

model Settings {
  id            String   @id @default(cuid())
  storeName     String   @default("Dropskey Store")
  supportEmail  String   @default("support@dropskey.com")
  currency      String   @default("USD")
  taxRate       Decimal  @default(0) @db.Decimal(5, 2)
  logoUrl       String?
  invoiceFooter String?
  updatedAt     DateTime @updatedAt
}
